// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "buffer_font_family": ".ZedMono",
  "use_autoclose": false,
  "soft_wrap": "editor_width",
  "seed_search_query_from_cursor": "selection",
  "use_smartcase_search": true,
  "search": {
    "regex": true
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "project_panel": {
    "hide_gitignore": true
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "redact_private_values": false,
  "agent": {
    "play_sound_when_agent_done": true,
    "default_profile": "write",
    "default_model": {
      "provider": "ollama",
      "model": "hf.co/unsloth/Qwen3-Coder-30B-A3B-Instruct-GGUF:Q5_K_XL"
    },
    "model_parameters": []
  },
  "disable_ai": false,
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "format_on_save": "off",
  "base_keymap": "JetBrains",
  "icon_theme": "JetBrains New UI Icons (Dark)",
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Dracula Solid"
  },
  "terminal": {
    "detect_venv": {
      "on": {
        // Default directories to search for virtual environments, relative
        // to the current working directory. We recommend overriding this
        // in your project's settings, rather than globally.
        "directories": [".env", "env", ".venv", "venv"],
        // Can also be `csh`, `fish`, and `nushell`
        "activate_script": "default"
      }
    }
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434",
      "available_models": [
        {
          "name": "hf.co/unsloth/Qwen3-Coder-30B-A3B-Instruct-GGUF:Q5_K_XL",
          "display_name": "Qwen3-Coder-30B -- 32K",
          "max_tokens": 16384,
          "supports_tools": true,
          "supports_thinking": false,
          "supports_images": false
        },
        {
          "name": "hf.co/unsloth/Ministral-3-14B-Instruct-2512-GGUF:Q6_K_XL",
          "display_name": "Ministral-3-14B-Instruct -- 32K",
          "max_tokens": 16384,
          "supports_tools": true,
          "supports_thinking": false,
          "supports_images": false
        }
      ]
    }
  }
}
